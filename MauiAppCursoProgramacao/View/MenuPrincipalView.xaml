<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:page="clr-namespace:MauiAppCursoProgramacao.View"
             x:Class="MauiAppCursoProgramacao.View.MenuPrincipalView"
             Title="MenuPrincipalView">


    <!--Menu-->
    <FlyoutPage.Flyout>
        <page:MenuView></page:MenuView>
        
    </FlyoutPage.Flyout>

    <!--Detalhes-->
    <FlyoutPage.Detail>
        <NavigationPage x:Name="Navegacao"  BarBackgroundColor="#2196F3" BarTextColor="White">
            <x:Arguments>
                <page:MenuDetailView></page:MenuDetailView>
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
    
</FlyoutPage>
